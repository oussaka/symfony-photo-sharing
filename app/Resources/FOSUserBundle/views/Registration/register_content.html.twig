{% form_theme form 'form/fields.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4 form-box">

        {{ form_errors(form) }}

        <div class="form-top">
            <h4>{{ 'register.head'|trans }}</h4>
            <p>{{ 'register.head.message'|trans }}</p>
        </div>

        <div class="form-bottom">
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'novalidate': 'novalidate'}}) }}

                {{ form_row(form.email) }}

                {{ form_row(form.username) }}

                {{ form_row(form.plainPassword.first) }}

                {{ form_row(form.plainPassword.second) }}

                <div>
                    <input type="submit" class="btn btn-primary btn-block" value="{{ 'registration.submit'|trans }}" />
                </div>
            {{ form_end(form) }}
        </div>

    </div>
</div>