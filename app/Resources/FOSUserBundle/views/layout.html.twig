{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block main %}

    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="alert alert-success {{ type }}">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    {% endfor %}


    <div>
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>

{% endblock %}
