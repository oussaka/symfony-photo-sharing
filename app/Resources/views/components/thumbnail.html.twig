<div class="row">
    {% for image in images %}

        <div class="col-md-7 thumb">
            <div class="thumbnail">
                <a href="{{ path('image_detail', {'id': image.id}) }}">
                    <img class="img-responsive" src="{{ image.getWebPath | imagine_filter('explore') }}" />
                </a>

                <div class="caption">
                    <div class="row">
                        <div class="col-md-9 col-xs-7">
                            <a href="{{ path('images_user', {'user': image.user}) }}">{{ image.user }}</a>
                            {{ image.createdAt|time_ago_in_words }}
                            <p class="hidden-xs">{{ image.name }}</p>
                        </div>
                        <div class="col-md-3 col-xs-5">
                            {% include "components/icons.html.twig" with {'image': image} %}
                        </div>
                    </div>
                </div>

            </div>
        </div>

    {% endfor %}
</div>

<div class="navigation text-center">
    {{ knp_pagination_render(images) }}
</div>