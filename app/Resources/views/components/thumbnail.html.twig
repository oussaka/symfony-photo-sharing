{% for row in images|batch(4) %}

    <div class="row">
        {% for image in row %}

            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <div class="thumbnail">
                    <a href="{{ path('image_detail', {'id': image.id}) }}">
                        <img class="img-responsive" src="{{ image.getWebPath | imagine_filter('my_thumb') }}" />
                    </a>
                </div>
            </div>

        {% endfor %}
    </div>

{% endfor %}

<div class="navigation text-center">
    {{ knp_pagination_render(images) }}
</div>