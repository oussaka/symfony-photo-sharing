{% extends 'base.html.twig' %}

{% block body_id 'image_detail' %}

{% block main %}

    {% for flash_message in app.session.flashbag.get('success') %}
        <div class="alert alert-success" role="alert">
            {{ flash_message }}
        </div>
    {% endfor %}


    <div class="row">

        <div class="col-md-7">
            <div class="thumbnail">
                <img src="{{ image.getWebPath | imagine_filter('my_widen') }}" />
            </div>
        </div>

        <div class="col-md-5">

            <div class="row">
                <div class="col-md-6">
                    <a href="{{ path('images_user', {'user': image.user}) }}"><strong>{{ image.user }}</strong></a>
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-2 col-xs-2">
                    {% if rating.id is defined %}
                        {% set icon = 'glyphicon glyphicon-star' %}
                    {% else %}
                        {% set icon = 'glyphicon glyphicon-star-empty' %}
                    {% endif %}


                    <button class="btn btn-default btn-sm" data-id="{{ image.id }}" id="favorite" type="button">
                        <span id="icon" aria-hidden="true" class="{{ icon }}"></span>
                        <span id="num-favorites">{{ image.ratings|length }}</span>
                    </button>

                    {#<span data-id="{{ image.id }}" id="favorite" aria-hidden="true" class="{{ icon }}"></span>#}
                </div>

                <div class="col-md-2 col-xs-2">
                    <a role="button" class="btn btn-default btn-sm" href="#image-add-comment">
                        <span class="glyphicon glyphicon-comment"></span>
                        {{ image.comments|length }}
                    </a>
                </div>

                <div class="col-md-6 col-xs-8">
                    Tomada el {{ image.createdAt|date('d F Y') }}
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-12">
                    {{ image.name }}
                    {% if is_granted('edit', image) %}
                        <a href="{{ path('image_edit', {'id': image.id}) }}">
                            <span class="glyphicon glyphicon glyphicon-edit" aria-hidden="true"></span>
                        </a>
                    {% endif %}
                </div>
            </div>

            <hr>

            <div class="row">
                <div class="col-md-12">
                    <p>Etiquetas</p>
                    {% for tag in image.tags %}
                        <a class="btn btn-xs btn-default" href="{{ path('images_tags', {'tag': tag.name }) }}">
                            {{ tag.name }}
                        </a>
                    {% endfor %}
                </div>
            </div>

            <hr>

        </div>
    </div>

    <div class="row">
        <div class="col-md-7">
            <div id="image-add-comment" class="well well-sm">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {{ render(controller('AppBundle:Image:commentForm', { 'id': image.id })) }}
                {% else %}
                    <p>
                        <a class="btn btn-success" href="{{ path('fos_user_security_login') }}">
                            <i class="fa fa-sign-in"></i> Inicia sesi√≥n
                        </a>
                        para publicar un comentario o indicar que te gusta
                    </p>
                {% endif %}
            </div>

            <div class="comments well well-sm">
                {#<p>Comentarios: {{ image.comments|length }}</p>#}
                <ul class="list-unstyled">
                    {% for comment in image.comments %}
                        <li>
                            <a href="{{ path('images_user', {'user': comment.user}) }}"><strong>{{ comment.user }}</strong></a>
                            <span class="comment-date"><time>{{ comment.publishedAt|time_ago_in_words }}</time></span>
                            <p>{{ comment.content }}</p>
                        </li>
                    {% else %}
                        <div class="image-comment">
                            <p>No hay comentarios</p>
                        </div>
                    {% endfor %}
                </ul>
            </div>

        </div>

    </div>


{% endblock %}


