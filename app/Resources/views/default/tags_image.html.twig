{% extends 'base.html.twig' %}

{% block body_id 'tags_image' %}

{% block main %}

    {% for row in tags|batch(4) %}

        <div class="row">
            {% for tag in row %}

                <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                    <div class="thumbnail">
                        <a href="{{ path('image_detail', {'id': tag.image.id}) }}">
                            <img class="img-responsive" src="{{ tag.image.getWebPath | imagine_filter('my_thumb') }}" />
                        </a>
                    </div>
                </div>

            {% endfor %}
        </div>

    {% endfor %}

{% endblock %}
